//Banner
.banner
  h1
    font-size: 4rem
    margin-bottom: .4rem
    margin-left: -.3rem
  p
    font-size: .925rem
    line-height: 1.4

//Text stlye classes
.center
  text-align: center

.right
  text-align: right

.thin
  font-weight: 100

.light
  font-weight: 300

.italic
  font-style: italic

.upcase
  text-transform: uppercase

//Google font family classes
.open-sans
  font-family: 'Open Sans', sans-serif

.montserrat
  font-family: 'Montserrat', sans-serif

.arvo
  font-family: 'Arvo', serif

.raleway
  font-family: 'Raleway', sans-serif

.roboto
  font-family: 'Roboto', sans-serif

.lato
  font-family: 'Lato', sans-serif

.lora
  font-family: 'Lora', serif

.vollkron
  font-family: 'Vollkorn', serif

.lobster
  font-family: 'Lobster Two', cursive

//Lobster Two
.lobster-section
  h1
    font-size: 4rem
  h2
    font-size: 2.825rem
    font-weight: 400

//Vollkron
.vollkron-section
  blockquote
    font-size: 2.618rem
    line-height: 1.375
    margin-bottom: 1.375rem
    text-indent: -.9rem
  p
    font-size: 1.618rem
    line-height: 1.5
  @media (min-width: $mobile)
    blockquote
      font-size: 4.236rem
      text-indent: -2.375rem
    p
      font-size: 2.618rem

//Open Sans
.open-sans-section
  h1
    position: relative
    font-size: 2rem
    font-weight: 800
    line-height: 1.2
    margin-bottom: 2.4rem
    text-transform: uppercase
    &:after
      position: absolute
      content: ""
      width: 20%
      height: 8px
      background: $second-text-color
      bottom: -1.3rem
      left: 0
  @media (min-width: $mobile)
    h1
      font-size: 3.157rem
      line-height: 1.1
  p
    font-size: 1.115rem
    line-height: 1.4
    margin-bottom: 1.4rem

//Roboto
.roboto-section
  h1
    font-size: 3.5rem
    margin-bottom: 1.2rem
  p
    font-size: 1.275rem
    line-height: 1.4
    font-weight: 500

//Lato
.lato-section
  h1
    font-size: 2.298rem
    font-weight: 900
    margin-bottom: 1rem
    text-transform: uppercase

  @media (min-width: $mobile)
    h1
      font-size: 3.998rem
  p
    font-size: 1.255rem
    line-height: 1.425
    margin-bottom: 1.425rem

//Lora
.lora-section
  h1
    font-size: 2.25rem
    margin-bottom: .25rem
    line-height: 1.1
  h2
    font-size: 1.625rem
    margin-bottom: 1rem
    line-height: 1.3
  h3
    font-size: 1.375rem
    margin-bottom: .8rem
  @media (min-width: $mobile)
    h1
      font-size: 3.99rem
    h2
      font-size: 2.827rem
      margin-bottom: 2rem
    h3
      font-size: 1.9rem
      margin-bottom: 1rem
  p
    font-size: 1.115rem
    line-height: 1.4
    margin-bottom: 1.4rem
  span
    font-size: 5.275rem
    display: block
    float: left
    width: .75em
    height: .8em
    line-height: 1
    margin: 0

//Raleway
.raleway-section
  h2
    font-size: 4.2em
    line-height: 1.2
    margin-bottom: 1rem
    text-transform: uppercase

.footer
  p
    margin-bottom: 1.4rem

//Opacity classes
for i in range(1,10)
  .opacity-{i}
    opacity: (i/10)
