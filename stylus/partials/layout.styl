a
  color: inherit
  text-decoration: none

.flex
   flexbox(row, nowrap)

.align-center
  flex-align()

.slide
  position: relative
  width: 100%
  padding: $spacing-unit*5 $spacing-unit
  margin: 0

.banner
  padding: $spacing-unit*7 $spacing-unit
  a
    border-bottom: 2px dotted $second-text-color
    padding-bottom: .25rem

//article containers
.article-big
.article-med
.article-small
  margin: 0 auto

.article-big
  max-width: $large-w

.article-med
  max-width: $med-w

.article-small
  max-width: $small-w

//Background color classes
.color-one
  background: $color-one
  color: $main-text-color


.color-two
  background: $color-two
  color: $main-text-color


.color-three
  background: $color-three
  color: $main-text-color


.color-four
  background: $color-four
  color: $second-text-color


.color-five
  background: $color-five
  color: $main-text-color

.color-six
  background: $color-six
  color: $main-text-color


.light
  background: $main-text-color
  color: $second-text-color

.footer
  padding: 1.5em 1em
  a
    border-bottom: 2px dotted $second-text-color
    padding-bottom: .25rem



@media (min-width: $mobile)
  .article-col-2
    -moz-column-count: 2
    -moz-column-gap: $spacing-unit
    -webkit-column-count: 2
    -webkit-column-gap: $spacing-unit
